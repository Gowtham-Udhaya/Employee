<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <servlet>
        <servlet-name>create</servlet-name>
        <jsp-file>/create.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>create</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cr</servlet-name>
        <servlet-class>Employee.Create</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cr</servlet-name>
        <url-pattern>/Create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>Employee.Update</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/Update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>del</servlet-name>
        <servlet-class>Employee.Delete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>del</servlet-name>
        <url-pattern>/Delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>List</servlet-name>
        <jsp-file>/list.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>List</servlet-name>
        <url-pattern>/List</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>up</servlet-name>
        <jsp-file>/update.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>up</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
